def connected_of_zigzag [inhabited J] (h : ‚àÄ (j‚ÇÅ j‚ÇÇ : J), ‚àÉ (l : list J), list.chain' zag l ‚àß ‚àÉ (hl : l ‚â† []), head' l hl = j‚ÇÅ ‚àß list.last l hl = j‚ÇÇ) :
  connected J :=
begin
  apply connected.of_rec,
  intros p d k j,
  obtain ‚ü®l, zags, nemp, hd, tl‚ü© := h j (default J),
  apply prop_up_chain' p l nemp zags hd tl _ d,
  rintros _ _ (‚ü®‚ü®_‚ü©‚ü© | ‚ü®‚ü®_‚ü©‚ü©),
  apply k a, symmetry, apply k a
end

