variables {J : Type v} [small_category J] {K : J ‚•§ C}

/--
Define the lift of a cone: For a cone `c` for `K ‚ãô F`, give a cone for `K`
which is a lift of `c`, i.e. the image of it under `F` is (iso) to `c`.

We will then use this as part of the definition of creation of limits:
every limit cone has a lift.

Note this definition is really only useful when `c` is a limit already.
-/
structure liftable_cone (K : J ‚•§ C) (F : C ‚•§ D) (c : cone (K ‚ãô F)) :=
(lifted_cone : cone K)
(valid_lift : F.map_cone lifted_cone ‚âÖ c)

structure liftable_cocone (K : J ‚•§ C) (F : C ‚•§ D) (c : cocone (K ‚ãô F)) :=
(lifted_cocone : cocone K)
(valid_lift : F.map_cocone lifted_cocone ‚âÖ c)

/--
Definition 3.3.1 of [Riehl].
We say that `F` creates limits of `K` if, given any limit cone `c` for `K ‚ãô F`
(i.e. below) we can lift it to a cone above, and further that `F` reflects
limits for `K`.

Note this is equivalent to Riehl's definition - the missing part here appears
to be that the lifted cone is not a limit, but `reflects` guarantees that it
is (proved in `lifted_limit_is_limit`).

If `F` reflects isomorphisms, it suffices to show only that the lifted cone is
a limit - see `creates_limit_of_reflects_iso`.
For this reason, we do not define this using `extends`.
TODO (BM): it might be sensible to define it using `extends` though.
-/
class creates_limit (K : J ‚•§ C) (F : C ‚•§ D) : Type (max u‚ÇÅ u‚ÇÇ v) :=
(lifts : Œ† (c : cone (K ‚ãô F)), is_limit c ‚Üí liftable_cone K F c)
(reflects : reflects_limit K F)

class creates_limits_of_shape (J : Type v) [small_category J] (F : C ‚•§ D) : Type (max u‚ÇÅ u‚ÇÇ v) :=
(creates_limit : Œ† {K : J ‚•§ C}, creates_limit K F)

class creates_limits (F : C ‚•§ D) : Type (max u‚ÇÅ u‚ÇÇ (v+1)) :=
(creates_limits_of_shape : Œ† {J : Type v} {ùí• : small_category J}, by exactI creates_limits_of_shape J F)

class creates_colimit (K : J ‚•§ C) (F : C ‚•§ D) : Type (max u‚ÇÅ u‚ÇÇ v) :=
(lifts : Œ† (c : cocone (K ‚ãô F)), is_colimit c ‚Üí liftable_cocone K F c)
(reflects : reflects_colimit K F)

class creates_colimits_of_shape (J : Type v) [small_category J] (F : C ‚•§ D) : Type (max u‚ÇÅ u‚ÇÇ v) :=
(creates_colimit : Œ† {K : J ‚•§ C}, creates_colimit K F)

class creates_colimits (F : C ‚•§ D) : Type (max u‚ÇÅ u‚ÇÇ (v+1)) :=
(creates_colimits_of_shape : Œ† {J : Type v} {ùí• : small_category J}, by exactI creates_colimits_of_shape J F)

def lift_limit {K : J ‚•§ C} {F : C ‚•§ D} [i : creates_limit K F] {c : cone (K ‚ãô F)} (t : is_limit c) : cone K :=
(creates_limit.lifts c t).lifted_cone

def lifted_limit_maps_to_original {K : J ‚•§ C} (F : C ‚•§ D) [i : creates_limit K F] {c : cone (K ‚ãô F)} (t : is_limit c) :
  F.map_cone (lift_limit t) ‚âÖ c := (creates_limit.lifts c t).valid_lift

def lifted_limit_is_limit {K : J ‚•§ C} {F : C ‚•§ D} [i : creates_limit K F] {c : cone (K ‚ãô F)} (t : is_limit c) : is_limit (lift_limit t) :=
begin
  apply @reflects_limit.reflects _ _ _ _ _ _ _ _ i.reflects (lift_limit t),
  apply is_limit.of_iso_limit t (lifted_limit_maps_to_original F t).symm,
end

