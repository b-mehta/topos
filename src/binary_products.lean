    erw [t.fac, ‚Üê c.w (e.counit_iso.hom.app j)],
    dsimp [cone_equivalence_comp, inv_fun_id_assoc],
    rw [id_comp, comp_id, ‚Üê w (e.inverse.obj j), assoc],
