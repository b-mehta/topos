def cone_equivalence_comp (e : K ‚âå J) (c : cone F) : cone (e.functor ‚ãô F) := cone.whisker e.functor c
def is_limit_equivalence_comp (e : K ‚âå J) {c : cone F} (t : is_limit c) : is_limit (cone_equivalence_comp e c) :=
